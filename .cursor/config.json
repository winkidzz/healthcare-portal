{
  "memoryBank": {
    "enabled": true,
    "path": "memory-bank",
    "files": {
      "rules": "rules.md",
      "activeContext": "activeContext.md",
      "techContext": "techContext.md",
      "systemPatterns": "systemPatterns.md",
      "productContext": "productContext.md",
      "projectBrief": "projectbrief.md"
    },
    "rules": {
      "portConfiguration": {
        "hostApp": 3000,
        "preferencesMfe": 3002,
        "icdTestsMfe": 3001,
        "reservedPorts": [3000, 3001, 3002],
        "portConflictResolution": {
          "action": "kill",
          "timeout": 5000
        }
      },
      "startupSequence": [
        {
          "name": "preferencesMfe",
          "command": "cd apps/preferences-mfe && lsof -ti:3002 | xargs kill -9 2>/dev/null || true && NODE_TLS_REJECT_UNAUTHORIZED=0 NEXT_PRIVATE_LOCAL_WEBPACK=true NEXT_PUBLIC_API_URL=http://localhost:8080/api next dev -p 3002",
          "port": 3002,
          "healthCheck": "http://localhost:3002/_next/static/chunks/remoteEntry.js"
        },
        {
          "name": "icdTestsMfe",
          "command": "cd apps/icd-tests-mfe && lsof -ti:3001 | xargs kill -9 2>/dev/null || true && npm run dev",
          "port": 3001,
          "healthCheck": "http://localhost:3001/_next/static/chunks/remoteEntry.js"
        },
        {
          "name": "hostApp",
          "command": "cd apps/host-app && lsof -ti:3000 | xargs kill -9 2>/dev/null || true && NEXT_PRIVATE_LOCAL_WEBPACK=true next dev -p 3000",
          "port": 3000,
          "healthCheck": "http://localhost:3000"
        }
      ],
      "buildTools": {
        "hostApp": {
          "tool": "webpack",
          "envVar": "NEXT_PRIVATE_LOCAL_WEBPACK=true"
        },
        "microFrontends": {
          "tool": "turbopack",
          "flag": "--turbopack"
        }
      }
    },
    "documentation": {
      "updateOnChange": true,
      "crossReference": true,
      "maintainConsistency": true
    },
    "testing": {
      "framework": "playwright",
      "directory": "host-app",
      "command": "npm run test"
    },
    "sequentialThinking": {
      "enabled": true,
      "schema": {
        "type": "object",
        "required": [
          "thought",
          "nextThoughtNeeded",
          "thoughtNumber",
          "totalThoughts"
        ],
        "properties": {
          "thought": {
            "type": "string",
            "description": "The current thinking step",
            "minLength": 1
          },
          "nextThoughtNeeded": {
            "type": "boolean",
            "description": "Whether another thought step is needed",
            "default": false,
            "enum": [true, false]
          },
          "thoughtNumber": {
            "type": "integer",
            "description": "Current thought number",
            "minimum": 1
          },
          "totalThoughts": {
            "type": "integer",
            "description": "Estimated total thoughts needed",
            "minimum": 1
          }
        },
        "additionalProperties": true
      },
      "typeCoercion": {
        "booleans": {
          "true": [true, "true", 1],
          "false": [false, "false", 0]
        }
      },
      "validation": {
        "enabled": true,
        "strict": true,
        "rules": [
          {
            "condition": "thoughtNumber <= totalThoughts",
            "message": "Thought number cannot exceed total thoughts"
          },
          {
            "condition": "!isRevision || (isRevision && revisesThought)",
            "message": "Revision must specify which thought is being revised"
          },
          {
            "condition": "!branchFromThought || (branchFromThought && branchId)",
            "message": "Branch must have an identifier"
          }
        ]
      },
      "examples": [
        {
          "description": "Basic sequential thinking",
          "parameters": {
            "thought": "Analyzing the current project state",
            "nextThoughtNeeded": true,
            "thoughtNumber": 1,
            "totalThoughts": 5
          }
        },
        {
          "description": "Revision of previous thought",
          "parameters": {
            "thought": "Revising previous analysis",
            "nextThoughtNeeded": true,
            "thoughtNumber": 2,
            "totalThoughts": 5,
            "isRevision": true,
            "revisesThought": 1
          }
        },
        {
          "description": "Branching thought process",
          "parameters": {
            "thought": "Exploring alternative approach",
            "nextThoughtNeeded": true,
            "thoughtNumber": 3,
            "totalThoughts": 5,
            "branchFromThought": 2,
            "branchId": "alternative-1"
          }
        }
      ]
    }
  },
  "projectStructure": {
    "root": "/Users/sanantha/cursorprojects",
    "components": {
      "hostApp": "host-app",
      "preferencesMfe": "preferences-mfe",
      "icdTestsMfe": "icd-tests-mfe",
      "sharedLibrary": "shared-library",
      "headlessCore": "headless-core"
    }
  },
  "editor": {
    "formatOnSave": true,
    "defaultFormatter": "prettier"
  },
  "ai": {
    "enabled": true,
    "suggestions": {
      "enabled": true,
      "context": "healthcare"
    },
    "codeReview": {
      "enabled": true,
      "rules": {
        "security": true,
        "performance": true,
        "accessibility": true
      }
    }
  },
  "projects": {
    "hostApp": "apps/host-app",
    "preferencesMfe": "apps/preferences-mfe",
    "icdTestsMfe": "apps/icd-tests-mfe",
    "sharedLibrary": "packages/shared-library",
    "designSystem": "packages/design-system",
    "apiClient": "packages/api-client"
  }
} 